<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingSetMakerDef>
    <defName>MU_Reward_AncientFacility</defName>
    <root Class="ThingSetMaker_Sum">
      <options>

        <!-- Upgrades -->
        <li>
          <chance>1</chance>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>MU_RemoteControlChip</li>
                  <li>MU_Module_Robust</li> 
                  <li>MU_CommandPack</li>
                  <li>MU_MiniTurret</li> 
                  <li>MU_LegActuators</li>
                  <li>MU_ShieldBooster</li> 
                  <li MayRequire="GoGaTio.MechanoidUpgrades.Anomaly">MU_AcidSpitter</li>
                  <li MayRequire="GoGaTio.MechanoidUpgrades.Anomaly">MU_AcidSynthesizer</li> 
                </thingDefs>
                <tradeTagsToAllow>
                  <li>MU_Burner</li>
                </tradeTagsToAllow>
                <thingSetMakerTagsToAllow>
                  <li>MU_StandardUpgrades</li>
                  <li>MU_AdvancedUpgrades</li>
                </thingSetMakerTagsToAllow>
              </filter>
              <countRange>1~1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>

      </options>
    </root>
  </ThingSetMakerDef>


