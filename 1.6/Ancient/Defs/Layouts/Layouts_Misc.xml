<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ComplexLayoutDef>
    <defName>MU_AncientComplex_Upgrades_Loot</defName>
    <workerClass>LayoutWorkerComplex_Ancient</workerClass>
    <roomRewardCrateFactor>0</roomRewardCrateFactor>
    <minRoomWidth>7</minRoomWidth>
    <minRoomHeight>7</minRoomHeight>
    <clearDoorFaction>false</clearDoorFaction>
    <corridorDef>ComplexCorridor</corridorDef>
    <canDisconnectRooms>false</canDisconnectRooms>
    <areaPrunePercent>0.1</areaPrunePercent>
    <roomDefs>
      <MU_AncientEntranceRoom>
        <weight>99</weight>
        <countRange>1~1</countRange>
      </MU_AncientEntranceRoom>
      <AncientRechargeRoom>
        <weight>1</weight>
      </AncientRechargeRoom>
      <AncientMechGestatorRoom>
        <weight>1</weight>
      </AncientMechGestatorRoom>
      <AncientMechGeneratorRoom>
        <weight>1</weight>
      </AncientMechGeneratorRoom>
      <AncientBandNodeRoom>
        <weight>2</weight>
        <countRange>0~2</countRange>
      </AncientBandNodeRoom>
    </roomDefs>
    <threats>
      <SleepingMechanoids />
      <FuelNode MayRequire="Ludeon.RimWorld.Ideology">
        <maxPerRoom>1</maxPerRoom>
        <selectionWeight>3</selectionWeight>
      </FuelNode>
    </threats>
  </ComplexLayoutDef>

  <StructureLayoutDef>
    <defName>MU_AncientUpgradesStockpile</defName>
    <workerClass>MU.LayoutWorker_AncientFacility</workerClass>
    <canHaveMultipleLayoutsInRoom>true</canHaveMultipleLayoutsInRoom>
    <clearRoomsEntirely>true</clearRoomsEntirely>
    <minRoomWidth>8</minRoomWidth>
    <minRoomHeight>8</minRoomHeight>
    
    <!-- Structure -->
    <doorStuffDef>Steel</doorStuffDef>
    <wallStuffDef>Steel</wallStuffDef>
    <wallLampDef>MU_AncientEmergencyLight</wallLampDef>
    
    <roomDefs>

      <!-- Special -->
      <MU_AncientFacilityEntrance>
        <countRange>1</countRange>
      </MU_AncientFacilityEntrance>

      <MU_AncientUpgraderRoom>
        <countRange>1</countRange>
      </MU_AncientUpgraderRoom>

      <MU_AncientAssemblerRoom>
        <weight>2</weight>
        <countRange>0~2</countRange>
      </MU_AncientAssemblerRoom> 

      <!-- Decorative -->
      <AncientRechargeRoom>1</AncientRechargeRoom>
      <AncientMechGestatorRoom>0.5</AncientMechGestatorRoom>
      <AncientMechGeneratorRoom>1</AncientMechGeneratorRoom>
      <AncientBandNodeRoom>
        <weight>1</weight>
        <countRange>0~1</countRange>
      </AncientBandNodeRoom> 

      <!-- Threats -->
      <MU_AncientDormantMechsRoom>1</MU_AncientDormantMechsRoom>
      
    </roomDefs> 
    <junkScaterrers>
      <Filth_Trash>
        <groupsPerHundredCells>0~3</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
      </Filth_Trash>
      <Filth_BlastMark>
        <groupsPerHundredCells>-2~1</groupsPerHundredCells> <!-- ~66% to not appear -->
        <itemsPerGroup>1~1</itemsPerGroup>
      </Filth_BlastMark>
      <Filth_MachineBits>
        <groupsPerHundredCells>-1~1</groupsPerHundredCells> <!-- ~50% to not appear -->
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>2~4</groupDistRange>
      </Filth_MachineBits>
      <ChunkSlagSteel>
        <groupsPerHundredCells>2~3</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </ChunkSlagSteel>
      <Filth_RubbleRock>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>3~8</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </Filth_RubbleRock>
      <Granite>
        <groupsPerHundredCells>1~2</groupsPerHundredCells>
        <itemsPerGroup>3~8</itemsPerGroup>
        <groupDistRange>1~2</groupDistRange>
        <minGroups>1</minGroups>
      </Granite>
    </junkScaterrers>
  </StructureLayoutDef>
  
</Defs>