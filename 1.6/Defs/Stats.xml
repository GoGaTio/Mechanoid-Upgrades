  <StatDef>
    <defName>MU_CarriedMassOffset</defName>
    <label>carried mass offset</label>
    <description>An extra mass, this creature can carry.</description>
    <category>BasicsPawn</category>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <toStringStyle>FloatOne</toStringStyle>
    <formatString>{0} kg</formatString>
    <showOnHumanlikes>true</showOnHumanlikes>
    <showOnAnimals>true</showOnAnimals>
    <showOnMechanoids>true</showOnMechanoids>
    <showOnEntities>false</showOnEntities>
    <scenarioRandomizable>true</scenarioRandomizable>
  </StatDef>

  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>MU_RangedDamageFactor_Hediff_Test</defName>
    <label>crutch</label>
    <description>Just a crutch to make ranged damage multiplier stat changable</description>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2500~3000</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <statFactors>
          <MU_RangedDamageFactor>1.2</MU_RangedDamageFactor>
          <MU_WeaponRangeFactor>0.9</MU_WeaponRangeFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

</Defs>
