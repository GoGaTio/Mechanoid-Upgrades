<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MU_MechUpgradeItemCraftable">
    <defName>MU_CargoCell_Small</defName>
    <label>small cargo cell</label>
    <description>Small cargo cell that can be installed in mechanoid. Increases carried weight, but also affects energy consumption.</description>
    <graphicData>
      <texPath>Things/Item/MechanoidUpgrade/MU_CargoCell_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
	  <Plasteel>10</Plasteel>
    </costList>
	<comps>
      <li Class="MU.CompProperties_MechUpgrade">
        <upgradeDef>MU_CargoCell_Small</upgradeDef>
      </li>
    </comps>
	<statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>5</Mass>
      <Flammability>0.5</Flammability>
	  <DeteriorationRate>1</DeteriorationRate>
	  <WorkToMake>9000</WorkToMake>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>MU_BasicUpgrades</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
