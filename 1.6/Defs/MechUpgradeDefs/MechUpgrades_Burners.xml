<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="MU_MechUpgradeItemCraftable">
    <defName>MU_ChemfuelMiniBurner</defName>
    <label>mini-burner</label>
    <description>A chemfuel-powered mini-burner unit which can be installed into mechanoid. Generates a stream of flame from highly flammable chemfuel, that form flamming pools on the ground. The mini-burner unit requires refueling after every use.</description>
    <uiIconPath>UI/MechanoidUpgrades/MU_MiniBurner_Chemfuel</uiIconPath>
    <graphicData>
      <texPath>Things/Item/MechanoidUpgrade/MU_MiniBurner</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.7, 0.7)</drawSize>
    </graphicData>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
	  <Plasteel>15</Plasteel>
	  <Chemfuel>15</Chemfuel>
    </costList>
	<comps>
      <li Class="MU.CompProperties_MechUpgrade">
        <upgradeDef>MU_ChemfuelMiniBurner</upgradeDef>
      </li>
    </comps>
	<statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.5</Flammability>
	  <DeteriorationRate>1</DeteriorationRate>
	  <WorkToMake>11000</WorkToMake>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>MU_Burners</researchPrerequisite>
	  <displayPriority>7000</displayPriority>
    </recipeMaker>
	<tradeTags>
      <li>MU_UpgradeWithAbility</li>
	  <li>MU_Burner</li>
    </tradeTags>
  </ThingDef>
  
  <MU.MechUpgradeDef>
    <defName>MU_ChemfuelMiniBurner</defName>
    <label>mini-burner</label>
    <description>A chemfuel-powered mini-burner unit which can be installed into mechanoid. Generates a stream of flame from highly flammable chemfuel, that form flamming pools on the ground. The mini-burner requires refueling after every use.</description>
	<uiIconPath>UI/MechanoidUpgrades/MU_MiniBurner_Chemfuel</uiIconPath>
	<linkedThingDef>MU_ChemfuelMiniBurner</linkedThingDef>
	<exclusionTags>
	  <li>Burner</li>
	</exclusionTags>
	<upgradePoints>1</upgradePoints>
	<minBodySize>0.3</minBodySize>
	<ability>MU_ChemfuelMiniBurner</ability>
	<restrictions>
	  <li Class="MU.UpgradeRestriction_FactorFromBodySize">
        <curve>
		  <points>
		    <li>(0, 2)</li>
			<li>(0.8, 1)</li>
			<li>(0.9, 0.5)</li>
			<li>(1, 0.1)</li>
			<li>(2, 0)</li>
		  </points>
		</curve>
      </li>
	</restrictions>
  </MU.MechUpgradeDef>
  
  <AbilityDef>
    <defName>MU_ChemfuelMiniBurner</defName>
    <label>mini-burner</label>
    <description>Use built-in mini-burner to spew stream of burning fuel. It ignites anything or anyone it hits, and also form flamming pools on the ground.</description>
    <iconPath>UI/Abilities/MU_MechBurner</iconPath>
	<charges>1</charges>
    <aiCanUse>true</aiCanUse>
	<warmupStartSound>FireSpew_Warmup</warmupStartSound>
    <showOnCharacterCard>false</showOnCharacterCard>
	<jobDef>CastAbilityOnThingWithoutWeaponInterruptible</jobDef>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <requireLineOfSight>true</requireLineOfSight>
      <range>5.9</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>FireSpew_Resolve</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityFireSpew">
        <range>5.9</range>
        <lineWidthEnd>3</lineWidthEnd>
        <filthDef>Filth_FlammableBile</filthDef>
        <effecterDef>Fire_Spew</effecterDef>
        <canHitFilledCells>true</canHitFilledCells>
		<damAmount>12</damAmount>
      </li>
      <li Class="MU.CompProperties_AbilityReloadableUpgrade">
        <ammoDef>Chemfuel</ammoDef>
		<ammoCount>15</ammoCount>
      </li>
	  <li Class="MU.CompProperties_AICastableAbility">
		<incendiary>true</incendiary>
      </li>
    </comps>
    <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
  </AbilityDef>
  
