		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/MU.MechUpgradeDef[defName="MU_CargoCell_Large"]/statOffsets/MU_CarriedMassOffset</xpath>
		<value>
			<CarryWeight>95</CarryWeight>
			<CarryBulk>95</CarryBulk>
		</value>
	</Operation>
	
