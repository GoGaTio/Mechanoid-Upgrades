	<Operation Class="PatchOperationReplace">
		<xpath>Defs/MU.MechUpgradeDef[defName="MU_CargoCell_Small"]/statOffsets/MU_CarriedMassOffset</xpath>
		<value>
			<CarryWeight>20</CarryWeight>
			<CarryBulk>20</CarryBulk>
