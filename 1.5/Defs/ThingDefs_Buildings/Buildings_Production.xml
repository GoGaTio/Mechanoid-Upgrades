      <drawSize>(5,2)</drawSize>
      <shadowData>
        <volume>(5, 2, 1.9)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
