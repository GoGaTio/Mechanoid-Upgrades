  <ThingDef ParentName="BuildingBase">
    <defName>MU_MechUpgrader</defName>
    <label>mech upgrader</label>
    <description>A special pod that can install and uninstall mechanoid upgrades. Requires mechanitor to begin process.\n\nUpgrades for installation should be in storages nearby.</description>
    <costList>
      <Steel>140</Steel>
      <Plasteel>60</Plasteel>
      <ComponentIndustrial>8</ComponentIndustrial>
	  <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <researchPrerequisites>
      <li>MU_BasicUpgrades</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
	<thingClass>MU.Building_MechUpgrader</thingClass>
    <containedPawnsSelectable>true</containedPawnsSelectable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
	<pathCost>62</pathCost>
    <fillPercent>0.35</fillPercent>
    <graphicData>
      <texPath>Things/Building/MU_MechUpgrader/MU_MechUpgrader</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.25,3.25)</drawSize>
      <shadowData>
        <volume>(3, 2, 1.9)</volume>
      </shadowData>
    </graphicData>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
    </building>
    <designationCategory>Biotech</designationCategory>
    <uiOrder>2512</uiOrder>
    <canOverlapZones>false</canOverlapZones>
    <size>(3,3)</size>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <statBases>
      <Flammability>0.5</Flammability>
	  <WorkToBuild>16000</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
	  <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>MU_UpgradesStorage</li>
		  <li>MU_LargeUpgradesStorage</li>
        </linkableFacilities>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <drawerType>MapMeshAndRealTime</drawerType>
	<descriptionHyperlinks>
      <ThingDef>MU_UpgradesStorage</ThingDef>
	  <ThingDef>MU_LargeUpgradesStorage</ThingDef>
	  <ThingDef>MU_BasicUpgradesAssembler</ThingDef>
	  <ThingDef>MU_AdvancedUpgradesAssembler</ThingDef>
	  <ThingDef>MU_AssemblyCentrifuge</ThingDef>
    </descriptionHyperlinks>
	<placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>MU_UpgradesStorage</defName>
    <label>upgrades storage</label>
	<placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <description>This building can store upgrades and make them available for using, when placed near a mech upgrader.\n\nCan contain up to 6 upgrades.</description>
    <graphicData>
      <texPath>Things/Building/MU_UpgradesStorage/MU_UpgradesStorage</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2, 1.1)</drawSize>
      <shadowData>
        <volume>(1.7, 0.3, 0.85)</volume>
      </shadowData>
    </graphicData>
	<building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
      <fixedStorageSettings>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <categories>
            <li>MU_Upgrades</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>MU_Upgrades</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <castEdgeShadows>true</castEdgeShadows>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tickerType>Rare</tickerType>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <size>(2, 1)</size>
	<uiOrder>2515</uiOrder>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <inspectorTabs>
      <li>MU.ITab_MechUpgrades</li>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <costList>
      <Steel>30</Steel>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
      <li>MU_BasicUpgrades</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <descriptionHyperlinks>
      <ThingDef>MU_MechUpgrader</ThingDef>
    </descriptionHyperlinks>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	<designationCategory>Biotech</designationCategory>
	<pathCost>42</pathCost>
	<altitudeLayer>Building</altitudeLayer>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Facility">
        <maxSimultaneous>999</maxSimultaneous>
        <maxDistance>11.9</maxDistance>
        <showMaxSimultaneous>false</showMaxSimultaneous>
      </li>
	  <li Class="MU.CompProperties_UpgradesStorage">
        <maxCapacity>6</maxCapacity>
      </li>
    </comps>
  </ThingDef>
  
