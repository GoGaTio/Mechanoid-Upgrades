    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <descriptionHyperlinks>
      <ThingDef>MU_MechUpgrader</ThingDef>
    </descriptionHyperlinks>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	<designationCategory>Biotech</designationCategory>
	<pathCost>42</pathCost>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Facility">
        <maxSimultaneous>999</maxSimultaneous>
        <maxDistance>11.9</maxDistance>
        <showMaxSimultaneous>false</showMaxSimultaneous>
      </li>
	  <li Class="MU.CompProperties_UpgradesStorage">
        <maxCapacity>18</maxCapacity>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>MU_AssemblyCentrifuge</defName>
    <label>assembly centrifuge</label>
    <description>Increases work speed when placed near an upgrades assembler. One assembler can use up to four centrifuges.</description>
    <graphicData>
      <texPath>Things/Building/MU_AssemblyCentrifuge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
	<tickerType>Normal</tickerType>
    <fillPercent>0.2</fillPercent>
    <canOverlapZones>false</canOverlapZones>
	<rotatable>false</rotatable>
    <pathCost>42</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>3800</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>40</Steel>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
    </building>
    <uiOrder>2517</uiOrder>
    <researchPrerequisites>
      <li>MU_StandardUpgrades</li>
    </researchPrerequisites>
    <designationCategory>Biotech</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>0.075</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>4</maxSimultaneous>
      </li>
	  <li Class="MU.CompProperties_FacilityMoteEmitter">
        <perRotationMotes>
          <li>MU_CentrifugeGlow</li>
          <li>MU_CentrifugeGlow</li>
          <li>MU_CentrifugeGlow</li>
          <li>MU_CentrifugeGlow</li>
        </perRotationMotes>
        <useParentRotation>false</useParentRotation>
      </li>
	  <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
	<drawPlaceWorkersWhileSelected>True</drawPlaceWorkersWhileSelected>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>

</Defs>