	<uiOrder>2516</uiOrder>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <inspectorTabs>
      <li>MU.ITab_MechUpgrades</li>
      <li>ITab_Storage</li>
