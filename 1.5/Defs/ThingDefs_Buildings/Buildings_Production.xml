<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>MU_BasicUpgradesAssembler</defName>
    <label>basic upgrades assembler</label>
    <description>A work station where low-tier mechanoid upgrades can be produced.</description>
    <thingClass>Building_WorkTable</thingClass>
    <canOverlapZones>false</canOverlapZones>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.3</fillPercent>
	<pathCost>52</pathCost>
    <graphicData>
      <texPath>Things/Building/MU_BasicUpgradesAssembler/MU_BasicUpgradesAssembler</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,2)</drawSize>
      <shadowData>
        <volume>(3, 2, 1.9)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
    </building>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <designationCategory>Biotech</designationCategory>
    <uiOrder>2513</uiOrder>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(3,2)</size>
    <costList>
      <Steel>100</Steel>
	  <Plasteel>30</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
      <li>MU_BasicUpgrades</li>
    </researchPrerequisites>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
	<descriptionHyperlinks>
      <ThingDef>MU_MechUpgrader</ThingDef>
	  <ThingDef>MU_AssemblyCentrifuge</ThingDef>
    </descriptionHyperlinks>
    <comps>
      <li Class="CompProperties_MoteEmitter">
        <perRotationMotes>
          <li>MU_BasicAssemblerGlow_North</li>
          <li>MU_BasicAssemblerGlow_East</li>
          <li>MU_BasicAssemblerGlow_South</li>
          <li>MU_BasicAssemblerGlow_West</li>
        </perRotationMotes>
        <useParentRotation>false</useParentRotation>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>MU_AssemblyCentrifuge</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      <li>PlaceWorker_ShowFacilitiesConnections</li> 
    </placeWorkers>
  </ThingDef>
  
  <ThingDef ParentName="BenchBase">
